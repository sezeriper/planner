{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "cmake -S. -Bbuild -DCMAKE_BUILD_TYPE=Debug && cmake --build build -j8 --config Debug"
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "cmake -S. -Bbuild -DCMAKE_BUILD_TYPE=Release && cmake --build build -j8 --config Release"
        },
        {
            "label": "build-relwithdeb",
            "type": "shell",
            "command": "cmake -S. -Bbuild -DCMAKE_BUILD_TYPE=RelWithDebInfo && cmake --build build -j8 --config RelWithDebInfo"
        }
    ]
}